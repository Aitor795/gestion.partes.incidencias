        <Grid>
            <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding listaRegistrosTabla}" x:Name="dgArticulos" Background="Bisque">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="TIPO DE REGISTRO" Binding="{Binding tipo_registro.descripcion}" />
                    <DataGridTextColumn Header="MOTIVO" Binding="{Binding motivo_registro.motivo}" />
                    <DataGridTemplateColumn Header="FECHA DE SUCESO" >

                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding fecha_suceso}" IsEnabled="False" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>

                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="ALUMNO" Binding="{Binding alumno.nia}" />
                    <DataGridTextColumn Header="PROFESOR" Binding="{Binding profesor.dni}" />
                    <DataGridTemplateColumn Header="FECHA DE REGISTRO" >

                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding fecha_registro}" IsEnabled="False" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>

                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="USUARIO QUE REGISTRA" Binding="{Binding profesor1.dni}" />
                    <DataGridTemplateColumn Header="SANCIONADO" >

                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding sancionado}" IsEnabled="False" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>

                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
